{
  "name": "falkirk-fc",
  "version": "1.0.0",
  "description": "MEAN web application for educational purposes",
  "main": "",
  "scripts": {
    "start": "node ./server/server.js",
    "dev": "concurrently -k \"npm run node-watch\" \"npm run test-watch\"",
    "node-watch": "env-cmd ./config/dev.env nodemon ./server/server.js",
    "test-watch": "env-cmd ./config/test.env jest --watchAll"
  },
  "author": "Jose Fernandes",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "env-cmd": "^8.0.2",
    "jest": "^24.7.1",
    "nodemon": "^1.18.10",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.2.2",
    "mongoose": "^5.4.21"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/src/tests/**/*.test.js"
    ]
  }
}
